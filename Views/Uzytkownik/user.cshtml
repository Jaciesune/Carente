@model Uzytkownik

<!-- Formularz w kwadracie na środku -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card" style="width: 400px;">
        <div class="card-body">
            <h5 class="card-title text-center">Edytuj profil</h5>
            <form method="post" asp-action="Edit">
                <!-- Imię i Nazwisko w jednym wierszu -->
                <div class="form-group row">
                    <div class="col-6">
                        <label for="imie">Imię</label>
                        <input type="text" class="form-control" id="imie" name="imie" value="@Model.imie" />
                    </div>
                    <div class="col-6">
                        <label for="nazwisko">Nazwisko</label>
                        <input type="text" class="form-control" id="nazwisko" name="nazwisko" value="@Model.nazwisko" />
                    </div>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="@Model.email" />
                </div>

                <!-- Telefon -->
                <div class="form-group">
                    <label for="tel">Telefon</label>
                    <input type="text" class="form-control" id="tel" name="tel" value="@Model.tel" />
                </div>               

                <!-- Nowe hasło -->
                <div class="form-group">
                    <label for="haslo">Nowe hasło (opcjonalnie)</label>
                    <input type="password" class="form-control" id="haslo" name="haslo" />
                </div>

                <!-- Potwierdzenie nowego hasła -->
                <div class="form-group">
                    <label for="confirmPassword">Potwierdź nowe hasło</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" />
                </div>

                <!-- Potwierdzenie hasłem -->
                <div class="form-group">
                    <label for="oldPassword">Potwierdź zmiany hasłem</label>
                    <input type="password" class="form-control" id="oldPassword" name="oldPassword" required />
                </div>

                <!-- Przycisk zapisz zmiany z odstępem -->
                <button type="submit" class="btn btn-primary w-100 mt-3">Zapisz zmiany</button>

            </form>
        </div>
    </div>
</div>
