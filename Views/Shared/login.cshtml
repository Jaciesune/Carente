@model Login
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="card p-4 shadow" style="width: 400px;">
        <h3 class="text-center">Zaloguj się</h3>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="email">Email</label>
                <input type="email" asp-for="email" class="form-control" placeholder="Wpisz email" required />
            </div>

            <div class="form-group">
                <label asp-for="haslo">Hasło</label>
                <input type="password" asp-for="haslo" class="form-control" placeholder="Wpisz hasło" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Zaloguj</button>
        </form>
    </div>
</div>
