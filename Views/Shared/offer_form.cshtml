@model Offer
@{
    ViewData["Title"] = "Dodaj Nową Ofertę";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="card p-4 shadow" style="width: 400px;">
        <h3 class="text-center">Dodaj Nową Ofertę</h3>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Cena">Cena</label>
                <input type="number" asp-for="Cena" class="form-control" placeholder="Wpisz cenę" required step="0.01" />
            </div>

            <div class="form-group">
                <label asp-for="Ocena">Ocena (1-5)</label>
                <input type="number" asp-for="Ocena" class="form-control" placeholder="Wpisz ocenę" required min="1" max="5" />
            </div>

            <div class="form-group">
                <label asp-for="Opis">Opis</label>
                <textarea asp-for="Opis" class="form-control" rows="5" placeholder="Wpisz opis oferty"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Status">Status</label>
                <input type="text" asp-for="Status" class="form-control" placeholder="Wpisz status" required />
            </div>

            

            <button type="submit" class="btn btn-primary w-100 mt-3">Dodaj Ofertę</button>
        </form>
    </div>
</div>
