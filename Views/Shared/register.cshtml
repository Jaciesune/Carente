@model Register
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="card p-4 shadow" style="width: 400px;">
        <h3 class="text-center">Rejestracja</h3>
        <form asp-action="Register" method="post" novalidate>
            <div class="form-group">
                <label asp-for="imie">Imię</label>
                <input asp-for="imie" class="form-control" placeholder="Wpisz imię" required />
                <span asp-validation-for="imie" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="nazwisko">Nazwisko</label>
                <input asp-for="nazwisko" class="form-control" placeholder="Wpisz nazwisko" required />
                <span asp-validation-for="nazwisko" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="email">Email</label>
                <input asp-for="email" type="email" class="form-control" placeholder="Wpisz email" required />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="haslo">Hasło</label>
                <input asp-for="haslo" type="password" class="form-control" placeholder="Wpisz hasło" required />
                <span asp-validation-for="haslo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="tel">Telefon</label>
                <input asp-for="tel" class="form-control" placeholder="Wpisz numer telefonu" required />
                <span asp-validation-for="tel" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Zarejestruj</button>
        </form>
    </div>
</div>
