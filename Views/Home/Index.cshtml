@model List<Offer>

@{
    ViewData["Title"] = "Strona główna";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var oferta in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="/Images/1.png" class="card-img-top" alt="Image @oferta.Id" />
                    <div class="card-body">
                        <h5 class="card-title">@oferta.Opis</h5>
                        <p class="card-text">Cena: @oferta.Cena</p>
                        <a href="@Url.Action("Details", "Home", new { id = oferta.Id })" class="btn btn-primary">Zobacz szczegóły</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
