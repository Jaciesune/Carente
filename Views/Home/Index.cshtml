@{
    ViewData["Title"] = "Strona główna";
}

<div class="container mt-4">
    <div class="row">
        @for (int i = 0; i < 3; i++)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="/Images/1.png" class="card-img-top" alt="Image @i" />
                    <div class="card-body">
                        <h5 class="card-title">Title @i</h5>
                        <p class="card-text">This is a description for item @i.</p>
                        <a href="@Url.Action("Details", "Home", new { id = i })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

