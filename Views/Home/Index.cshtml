@model List<Carente.Models.CarOffer>

@{
    ViewData["Title"] = "Strona główna";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/images/1.png" class="card-img-top" alt="@item.Marka" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Marka</h5>
                        <p class="card-text">Rocznik: @item.Rocznik</p>
                        <p class="card-text">Cena: @item.Cena.ToString("F2") PLN</p>
                        <!-- Przycisk przechodzący do strony szczegółów -->
                        <a href="@Url.Action("Details", "Home", new { id = item.Id })" class="btn btn-primary">Zobacz szczegóły</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
</style>
